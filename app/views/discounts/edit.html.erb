<%= "Edit Discount" %>
<%= form_with(model: @discount, url: merchant_discount_path(@merchant, @discount), method: "patch" ,local: true) do |form| %>
    <%= form.label "Change Percent Discount" %>
    <%= form.text_field :percent_discount %><br>
    <%= form.label "Change Quantity" %>
    <%= form.text_field :quantity %><br>
    <%= form.submit "Edit Discount" %>
<% end  %>


