<h1>Bulk Discounts</h1><br>
<br>

<% @merchant.discounts.each do |discount| %>
  <%= require "pry"; binding.pry %>
  <%= "#{(discount.percent_discount * 100).to_i} percent off when #{discount.quantity} items are bought." %><br>
  <%= link_to "Discount", merchant_discount_path(@merchant, discount)%><br>
  <%= link_to "Delete", merchant_discount_path(@merchant, discount), method: :delete %><br>
<% end %>
